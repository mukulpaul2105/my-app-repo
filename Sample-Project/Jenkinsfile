pipeline {
  agent any
  stages {	
	stage('Maven Compile'){
		steps{
			echo 'Project compile stage'
			bat label: 'Compilation running', script: '''mvn -f Sample-Project/pom.xml compile'''
	       	}
	}
	
	stage('Unit Test') {
	   steps {
			echo 'Project Testing stage'
			bat label: 'Test running', script: '''mvn -f Sample-Project/pom.xml test'''
	       
       		}
   	}

	stage('Jacoco Coverage Report') {
        	steps{
            		jacoco()
		}
	}
       
       stage('SonarQube'){
		steps{
				bat label: '', script: '''mvn -f Sample-Project/pom.xml sonar:sonar \
				-Dsonar.host.url=http://localhost:9000 \
				-Dsonar.login=5aababc16a92b58d92f2160e71a2d77c755de187'''
			}
   		}
	
	stage('Maven Package'){
		steps{
			echo 'Project packaging stage'
			bat label: 'Project packaging', script: '''mvn -f Sample-Project/pom.xml package'''
		}
	} 		
    
  }
}

